            </div>
            <div class="form-group">
                <label asp-for="FkBookId" class="control-label"></label>
                <select asp-for="FkBookId" class="form-control" asp-items="ViewBag.FkBookId"></select>
                <span asp-validation-for="FkBookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
